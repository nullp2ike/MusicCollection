<h1>Listing albums</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Picture</th>
    <th>Description</th>
    <th>Artist</th>
    <th>Label</th>
    <th>Genre</th>
    <th>Format</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.title %></td>
    <td><%= album.year %></td>
    <td><%= album.picture %></td>
    <td><%= album.description %></td>
    <td><%= album.artist %></td>
    <td><%= album.label %></td>
    <td><%= album.genre %></td>
    <td><%= album.format %></td>
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

